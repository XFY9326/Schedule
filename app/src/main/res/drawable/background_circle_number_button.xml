<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <ripple android:color="@color/circle_num_button_ripple">
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/circle_num_button" />
                    <size android:width="@dimen/circle_number_button_size" android:height="@dimen/circle_number_button_size" />
                </shape>
            </item>

            <item android:id="@android:id/mask">
                <shape android:shape="oval">
                    <solid android:color="@color/circle_num_button_ripple" />
                    <size android:width="@dimen/circle_number_button_size" android:height="@dimen/circle_number_button_size" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_checked="true">
        <ripple android:color="@color/circle_num_button_ripple">
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/circle_num_button_checked" />
                    <size android:width="@dimen/circle_number_button_size" android:height="@dimen/circle_number_button_size" />
                </shape>
            </item>

            <item android:id="@android:id/mask">
                <shape android:shape="oval">
                    <solid android:color="@color/circle_num_button_ripple" />
                    <size android:width="@dimen/circle_number_button_size" android:height="@dimen/circle_number_button_size" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>