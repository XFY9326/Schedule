<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080">

    <shape
        android:shape="ring"
        android:thickness="15dp"
        android:useLevel="false">

        <gradient
            android:endColor="@color/progress_bar_foreground"
            android:startColor="@color/progress_bar_background"
            android:type="sweep"
            android:useLevel="false" />

    </shape>

</rotate>