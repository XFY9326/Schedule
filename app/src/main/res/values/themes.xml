<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.ImmersiveNavigation" parent="AppTheme">
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">@null</item>
    </style>

    <style name="AppTheme.Schedule" parent="AppTheme.ImmersiveNavigation">
        <item name="android:windowLightStatusBar">@null</item>
    </style>

    <style name="AppTheme.LaunchScreen.Base" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="windowSplashScreenBackground">@color/launch_screen_windows_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_logo</item>
    </style>

    <style name="AppTheme.LaunchScreen" parent="AppTheme.LaunchScreen.Base">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.LaunchScreen.Schedule" parent="AppTheme.LaunchScreen">
        <item name="postSplashScreenTheme">@style/AppTheme.Schedule</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="colorAccent">@color/theme_color_accent</item>
        <item name="android:textColorPrimary">@color/theme_color_primary_text</item>
        <item name="android:textColorSecondary">@color/theme_color_secondary_text</item>
        <item name="android:textColorTertiary">@color/theme_color_secondary_text</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.DayNight</item>
        <item name="actionOverflowMenuStyle">@style/AppTheme.OverflowMenuStyle</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="snackbarStyle">@style/AppTheme.SnackBar</item>
        <item name="dialogCornerRadius">6dp</item>
        <item name="android:dialogTheme">@style/AppTheme.MaterialDialog</item>
        <item name="dialogTheme">@style/AppTheme.MaterialDialog</item>
        <item name="alertDialogTheme">@style/AppTheme.MaterialDialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.MaterialDialog</item>
        <item name="android:datePickerDialogTheme">@style/AppTheme.MaterialRoundCornerDialog</item>
        <item name="android:timePickerDialogTheme">@style/AppTheme.MaterialRoundCornerDialog</item>
        <item name="sliderStyle">@style/AppTheme.AnimateSlider</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.MaterialDialog</item>
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="collapsingToolbarLayoutStyle">@style/AppTheme.CollapsingToolbarLayout</item>
    </style>

    <style name="AppTheme.Settings" parent="AppTheme.ImmersiveNavigation">
        <item name="android:textColorPrimary">@color/primary_text_color_selector</item>
        <item name="android:textColorSecondary">@color/secondary_text_color_selector</item>
        <item name="android:textColorTertiary">@color/secondary_text_color_selector</item>
    </style>

    <style name="AppTheme.ActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_scroll_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_scroll_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_scroll_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_scroll_out_right</item>
    </style>

    <style name="AppTheme.SnackBar" parent="Widget.MaterialComponents.Snackbar">
        <item name="animationMode">slide</item>
        <item name="backgroundTint">@color/snack_bar_background_tint</item>
    </style>

    <style name="AppTheme.OverflowMenuStyle" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dropDownVerticalOffset">5dp</item>
        <item name="android:dropDownHorizontalOffset">-2dp</item>
    </style>

    <style name="AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="AppTheme.CardView.SelectableItemBackground" parent="AppTheme.CardView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.SelectableItemBackground">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.SelectableItemBackgroundBorderless">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.MaterialDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitlePanelStyle">@style/AppTheme.MaterialDialogTitle</item>
    </style>

    <style name="AppTheme.OperationButtonDialog" parent="AppTheme.MaterialDialog">
        <item name="android:windowBackground">@color/operation_button_dialog_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.MaterialDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="AppTheme.MaterialRoundCornerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>

    <style name="AppTheme.TransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0.2</item>
        <item name="bottomSheetStyle">@style/AppTheme.TransparentBottomSheetStyle</item>
    </style>

    <style name="AppTheme.TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AnimateSlider" parent="Widget.MaterialComponents.Slider">
        <item name="tickColor">@android:color/transparent</item>
        <item name="haloColor">@android:color/transparent</item>
        <item name="trackColorActive">@color/anim_slider_tracker_active</item>
        <item name="trackColorInactive">@color/anim_slider_tracker_inactive</item>
        <item name="haloRadius">0dp</item>
        <item name="android:background">@null</item>
        <item name="thumbColor">@android:color/white</item>
        <item name="thumbRadius">@dimen/slider_thumb_radius_not_touched</item>
        <item name="trackHeight">@dimen/slider_tracker_height</item>
    </style>

    <style name="AppTheme.NightModeTransitionAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_fast_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fast_fade_out</item>
    </style>

    <style name="AppTheme.CollapsingToolbarLayout" parent="Widget.Design.CollapsingToolbar">
        <item name="collapsedTitleGravity">left|center_vertical</item>
        <item name="expandedTitleGravity">left|bottom</item>
    </style>

    <style name="AppTheme.AppWidgetNextCourse" parent="Theme.MaterialComponents.DayNight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:elevation">1dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/background_app_widget</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>