<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_nextCourseWidgetContent"
        style="@style/AppTheme.AppWidgetNextCourse"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="5dp"
        android:paddingEnd="12dp"
        android:paddingBottom="5dp"
        tools:layout_height="70dp"
        tools:layout_width="160dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/imageView_nextCourseWidgetColor"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:contentDescription="@string/course_color_description"
                android:scaleType="fitCenter"
                android:src="@drawable/shape_circle_20" />

            <TextView
                android:id="@+id/textView_nextCourseWidgetTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:singleLine="true"
                android:text="@string/next_course_widget_sample_time"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_nextCourseWidgetName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center|start"
            android:lines="2"
            android:maxLines="2"
            android:text="@string/next_course_widget_sample_name"
            android:textColor="@color/theme_color_primary_text"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>