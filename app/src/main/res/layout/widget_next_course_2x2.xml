<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_nextCourseWidgetContent"
        style="@style/AppTheme.AppWidgetNextCourse"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        tools:layout_height="150dp"
        tools:layout_width="150dp"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/imageView_nextCourseWidgetColor"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="@string/course_color_description"
                android:scaleType="fitCenter"
                android:src="@drawable/shape_circle_20" />

            <TextView
                android:id="@+id/textView_nextCourseWidgetTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:singleLine="true"
                android:textColor="@color/theme_color_primary_text"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_nextCourseWidgetName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center|start"
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/theme_color_primary_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_nextCourseWidgetTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:textColor="@color/theme_color_secondary_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_nextCourseWidgetLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:textColor="@color/theme_color_secondary_text"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_nextCourseWidgetMsg"
        style="@style/AppTheme.AppWidgetNextCourse"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        tools:ignore="UseCompoundDrawables"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/imageView_nextCourseWidgetIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="@string/icon_description"
            android:src="@drawable/ic_break_24"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textView_nextCourseWidgetMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/app_widget_init"
            android:textColor="@color/theme_color_secondary_text" />

    </LinearLayout>

</FrameLayout>